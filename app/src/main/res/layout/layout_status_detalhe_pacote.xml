<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/status_detalhe_textview_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="31/08/23"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/status_detalhe_textview_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="18:08"
        android:textColor="@color/text_grey"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/status_detalhe_textview_data"
        app:layout_constraintStart_toStartOf="@id/status_detalhe_textview_data"
        app:layout_constraintTop_toBottomOf="@id/status_detalhe_textview_data" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/status_detalhe_divider_timeline"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/status_detalhe_textview_data"
        app:layout_constraintTop_toTopOf="parent" />
    
    <View
        android:id="@+id/status_detalhe_view_status"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="#AEF3FE"
        app:layout_constraintTop_toTopOf="@id/status_detalhe_divider_timeline"
        app:layout_constraintBottom_toBottomOf="@id/status_detalhe_divider_timeline"
        app:layout_constraintStart_toStartOf="@id/status_detalhe_divider_timeline"
        app:layout_constraintEnd_toEndOf="@id/status_detalhe_divider_timeline"/>

    <TextView
        android:id="@+id/status_detalhe_textview_descricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Coordenador registrou recebimento desse pacote"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/status_detalhe_divider_timeline"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>